# ========================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ========================================
# DATABASE CONFIGURATION (REQUIRED)
# ========================================
# MongoDB connection string
# Get this from MongoDB Atlas dashboard
# Example: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# ========================================
# JWT AUTHENTICATION (REQUIRED)
# ========================================
# Secret key for JWT token signing (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_generated_secret_key_minimum_32_characters_long
JWT_EXPIRE_IN=12h

# ========================================
# CORS CONFIGURATION (REQUIRED FOR PRODUCTION)
# ========================================
# Comma-separated list of allowed frontend origins
# SECURITY: Only requests from these domains will be allowed
# 
# Development (local testing):
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
#
# Production (deployed frontend):
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
#
# ⚠️ CRITICAL SECURITY NOTES:
# 1. NEVER use wildcards (*) in production
# 2. Always use HTTPS in production
# 3. Include ALL your frontend domains (www and non-www)
# 4. If not set, defaults to http://localhost:3000 only
ALLOWED_ORIGINS=http://localhost:3000

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=5000
NODE_ENV=development

# ========================================
# ERROR TRACKING & MONITORING (RECOMMENDED FOR PRODUCTION)
# ========================================
# Sentry DSN for error tracking and performance monitoring
# Get this from: https://sentry.io/settings/projects/your-project/keys/
# Leave empty to disable Sentry
SENTRY_DSN=

# ========================================
# EMAIL CONFIGURATION (REQUIRED FOR NOTIFICATIONS)
# ========================================
# Email service provider
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# Your email credentials
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Sender information (displayed in emails)
EMAIL_FROM=Your App Name <noreply@yourapp.com>

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ========================================
# TIMEZONE
# ========================================
TIMEZONE=Asia/Kolkata

# ========================================
# FRONTEND URL (for email links)
# ========================================
# Development
FRONTEND_URL=http://localhost:3000

# Production (update after deploying frontend)
# FRONTEND_URL=https://yourdomain.com

# ========================================
# OPTIONAL: REDIS CONFIGURATION
# ========================================
# Redis provides caching for improved performance
# If not configured, the application will use in-memory caching fallback
# 
# For local development (optional):
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
#
# For Redis Cloud or production:
# REDIS_URL=redis://username:password@hostname:port
#
# Uncomment to enable Redis caching:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ========================================
# DEPLOYMENT CHECKLIST
# ========================================
# Before deploying to production:
# ✅ Set strong JWT_SECRET (32+ characters)
# ✅ Set MONGODB_URI to production database
# ✅ Set ALLOWED_ORIGINS to your deployed frontend URL(s)
# ✅ Set NODE_ENV=production
# ✅ Configure EMAIL_USER and EMAIL_PASSWORD
# ✅ Set FRONTEND_URL to production domain
# ✅ Use HTTPS for all production URLs
# ✅ Never expose .env file in version control
