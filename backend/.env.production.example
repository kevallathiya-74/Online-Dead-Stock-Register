# Production Environment Configuration Template
# Copy this file to .env.production and fill in the values

# Server Configuration
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# MongoDB Configuration
# IMPORTANT: Replace with your production MongoDB Atlas cluster URL
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a strong secret key using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_HERE_MINIMUM_64_CHARACTERS
JWT_EXPIRE=12h

# Email Configuration (Nodemailer)
# IMPORTANT: Use production email credentials
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-production-email@company.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Asset Management System <noreply@company.com>

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# CORS Configuration
# IMPORTANT: Set your production frontend URL
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=YOUR_PRODUCTION_SESSION_SECRET_HERE_MINIMUM_64_CHARACTERS

# Backup Configuration
BACKUP_DIR=backups
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Security Headers
HELMET_CSP_ENABLED=true

# SSL/TLS Configuration (if using HTTPS)
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# SSL_KEY_PATH=/path/to/ssl/private.key

# Database Backup
# DB_BACKUP_SCHEDULE=0 2 * * *

# Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_ID=your-analytics-id-here

# Redis Configuration (Optional - for session storage)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# AWS S3 Configuration (Optional - for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Admin Account (First-time setup only)
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=ChangeThisPassword@Production123
